@{
  Layout ="shared/_Layout.cshtml";
}
<h2>Edit course: @Model.GetName()</h2>
<form action="/course/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="course-id" type="hidden" value="@Model.GetId()">
  <label for="course-name">Course name</label>
  <input id="course-name" name="course-name" type="text">
  <label for="course-number">Course number</label>
  <input id="course-number" name="course-number" type="text">
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
